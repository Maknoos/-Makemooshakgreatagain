@model Course
@{
     ViewBag.Title = "Home Page";
}
<div class="row">
    <h1>@Model.name</h1>
    <div class="col-md-8">
        <section>
            <form asp-controller="Admin" asp-action="CreateCourse" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <hr />
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="teachers" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="teachers" class="form-control" />
                        <span asp-validation-for="teachers" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Add</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>